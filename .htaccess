RewriteEngine On

# Захватываем всё после /api и передаём в api.php как параметр 'path'
RewriteCond %{REQUEST_URI} ^/api/(.*)$
RewriteRule ^api/(.*)$ api.php?path=$1 [QSA,L]

RewriteRule ^login$ login.php [L]
RewriteRule ^logout$ logout.php [L]
RewriteRule ^signup$ signup.php [L]
RewriteRule ^profile$ profile.php [L]

RewriteRule ^admin/students_data/?$ admin/students_data.php [L]
RewriteRule ^admin/lessons/?$ admin/lessons.php [L]
